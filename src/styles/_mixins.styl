@require '_variables'

background-image($filename, $path = $path-images)
  background-image url($path + $filename + '?@@timestamp')

background-loader()
  background-position center center
  background-repeat no-repeat
  background-image('loader.svg')

border-radius($property)
  -webkit-border-radius $property
  -mox-border-radius $property
  box-border-radius $property

box-sizing($property)
  -webkit-box-sizing $property
  -mox-box-sizing $property
  box-sizing $property

box-shadow(shadow)
  -webkit-box-shadow shadow
  -moz-box-shadow shadow
  box-shadow shadow

padding-top-bottom(size)
  padding-top size
  padding-bottom size

padding-left-right(size)
  padding-left size
  padding-right size

margin-top-bottom(size)
  margin-top size
  margin-bottom size

margin-left-right(size)
  margin-left size
  margin-right size

clearfix()
  zoom 1
  &:after
    content ' '
    display table
    clear both

transform($property)
  -webkit-transform unquote($property)
  -moz-transform unquote($property)
  -ms-transform unquote($property)
  -o-transform unquote($property)
  transform unquote($property)

transition(property, time)
  -webkit-transition property time $animation-ease-default
  -moz-transition property time $animation-ease-default
  -o-transition property time $animation-ease-default
  transition property time $animation-ease-default

breakpoint(size)
  if(size == 'xs')
    @media screen and (max-width $screen-xs-max)
      {block}
  else if (size == 'xs-sm')
    @media screen and (max-width $screen-sm-max)
      {block}
  else if (size == 'sm')
    @media screen and (min-width $screen-xs-max) and (max-width $screen-sm-max)
      {block}
  else if (size == 'sm-md')
    @media screen and (min-width $screen-sm-min) and (max-width $screen-md-max)
      {block}
  else if (size == 'sm-lg')
    @media screen and (min-width $screen-sm-min)
      {block}
  else if (size == 'md')
    @media screen and (min-width $screen-sm-max) and (max-width $screen-md-max)
      {block}
  else if (size == 'md-lg')
    @media screen and (min-width $screen-md-min)
      {block}
  else if (size == 'lg')
    @media screen and (min-width $screen-lg-min)
      {block}
